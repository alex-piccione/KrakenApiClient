<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>    
    <IsPackable>false</IsPackable>
    <GenerateProgramFile>false</GenerateProgramFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Alex75.Cryptocurrencies" Version="0.7.13" />
    <PackageReference Include="FsUnit" Version="3.8.0" />
    <PackageReference Include="nunit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.16.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.4.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="pre-build.cmd" />
    <Content Include="data\GET ticker response.json" />
    <Content Include="data\GET pairs response.json" />
    <Compile Include="utils.fs" />
    <Compile Include="Client ListPairs.fs" />
    <Compile Include="Client GetTicker.fs" />
    <Compile Include="Client GetBalance.fs" />
    <Compile Include="Client Create Market Order.fs" />
    <Compile Include="Client List Open Orders.fs" />
    <Compile Include="Client Withdraw.fs" />
    <Content Include="api keys.yaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Alex75.KrakenApiClient\Alex75.KrakenApiClient.fsproj" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="pre-build.cmd &quot;$(ProjectDir)&quot; &quot;$(TargetDir)&quot;" />
  </Target>

</Project>
